---
// Stylized book stack illustration
const books = [
  { title: "Designing Data-Intensive Applications", color: "#2d3748", spine: "#4a5568" },
  { title: "Clean Code", color: "#553c9a", spine: "#6b46c1" },
  { title: "System Design", color: "#1a365d", spine: "#2b6cb0" },
  { title: "The Pragmatic Programmer", color: "#234e52", spine: "#319795" },
  { title: "Domain-Driven Design", color: "#742a2a", spine: "#c53030" },
];
---

<div class="book-stack-wrapper">
  <div class="book-stack">
    {books.map((book, index) => (
      <div
        class="book"
        style={`--book-color: ${book.color}; --spine-color: ${book.spine}; --delay: ${index * 0.1}s`}
      >
        <div class="book-spine"></div>
        <div class="book-cover">
          <span class="book-title">{book.title}</span>
        </div>
        <div class="book-pages"></div>
      </div>
    ))}
  </div>
  <div class="stack-shadow"></div>
</div>

<style>
  .book-stack-wrapper {
    position: relative;
    display: flex;
    justify-content: center;
    align-items: flex-end;
    padding: var(--space-xl) 0;
  }

  .book-stack {
    position: relative;
    display: flex;
    flex-direction: column-reverse;
    gap: 0;
    transform: perspective(50rem) rotateX(5deg) rotateY(-5deg);
    transform-style: preserve-3d;
  }

  .book {
    position: relative;
    width: clamp(12.5rem, 30vw, 17.5rem);
    height: clamp(1.75rem, 4vw, 2.25rem);
    transform-style: preserve-3d;
    transition: transform 0.3s ease;
    animation: slideIn 0.5s ease-out backwards;
    animation-delay: var(--delay);
  }

  .book:hover {
    transform: translateX(0.625rem) translateZ(0.3125rem);
  }

  @keyframes slideIn {
    from {
      opacity: 0;
      transform: translateX(-1.25rem);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }

  .book-cover {
    position: absolute;
    inset: 0;
    background: var(--book-color);
    border-radius: 0.125rem 0.25rem 0.25rem 0.125rem;
    display: flex;
    align-items: center;
    padding: 0 var(--space-md);
    box-shadow:
      inset 0 1px 0 rgba(255,255,255,0.1),
      inset 0 -1px 0 rgba(0,0,0,0.2);
  }

  .book-title {
    font-family: var(--font-sans);
    font-size: clamp(0.55rem, 1vw, 0.7rem);
    font-weight: 600;
    color: rgba(255, 255, 255, 0.9);
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    letter-spacing: 0.02em;
  }

  .book-spine {
    position: absolute;
    left: 0;
    top: 0;
    bottom: 0;
    width: 0.5rem;
    background: var(--spine-color);
    border-radius: 0.125rem 0 0 0.125rem;
    transform: rotateY(-90deg) translateX(-0.25rem);
    transform-origin: left center;
  }

  .book-pages {
    position: absolute;
    right: -0.1875rem;
    top: 0.125rem;
    bottom: 0.125rem;
    width: 0.375rem;
    background: linear-gradient(
      to right,
      #f7f7f5 0%,
      #e8e8e4 20%,
      #f7f7f5 40%,
      #e8e8e4 60%,
      #f7f7f5 80%,
      #e8e8e4 100%
    );
    background-size: 0.125rem 100%;
    border-radius: 0 1px 1px 0;
    transform: rotateY(90deg) translateX(0.1875rem);
    transform-origin: right center;
  }

  .stack-shadow {
    position: absolute;
    bottom: 0;
    left: 50%;
    transform: translateX(-50%);
    width: clamp(11.25rem, 28vw, 16.25rem);
    height: 1.25rem;
    background: radial-gradient(ellipse at center, rgba(0,0,0,0.15) 0%, transparent 70%);
    filter: blur(0.25rem);
  }

  /* Decorative elements */
  .book-stack::before {
    content: "";
    position: absolute;
    top: -2.5rem;
    left: 50%;
    transform: translateX(-50%);
    width: 3.75rem;
    height: 3.75rem;
    background: var(--secondary);
    border-radius: 50%;
    opacity: 0.5;
    z-index: -1;
  }

  @media (max-width: 37.5rem) {
    .book-stack {
      transform: perspective(50rem) rotateX(3deg) rotateY(-3deg);
    }

    .book {
      height: 1.625rem;
    }

    .book-spine {
      width: 0.375rem;
      transform: rotateY(-90deg) translateX(-0.1875rem);
    }

    .book-title {
      font-size: 0.5rem;
    }
  }
</style>
