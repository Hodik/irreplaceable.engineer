---
interface Props {
  number: number;
  title: string;
  description: string;
}

const { number, title, description } = Astro.props;
---

<div class="process-step">
  <div class="step-number">{number}</div>
  <div class="step-content">
    <h3>{title}</h3>
    <p set:html={description} />
  </div>
</div>

<style>
  .process-step {
    display: flex;
    gap: 1.5rem;
    padding: 2rem;
    background: var(--card);
    border: 1px solid var(--border);
    border-radius: 16px;
    transition: box-shadow 0.2s ease;
  }

  .process-step:hover {
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.06);
  }

  .step-number {
    flex-shrink: 0;
    width: 3rem;
    height: 3rem;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--primary);
    color: var(--primary-foreground);
    font-family: var(--font-sans);
    font-size: 1.25rem;
    font-weight: 700;
    border-radius: 50%;
  }

  .step-content {
    flex: 1;
  }

  .step-content h3 {
    margin: 0 0 0.75rem 0;
    font-size: clamp(1.1rem, 2vw, 1.25rem);
    font-weight: 600;
    font-family: var(--font-sans);
    color: var(--foreground);
    line-height: 1.3;
  }

  .step-content p {
    margin: 0;
    font-size: clamp(0.95rem, 1.5vw, 1.05rem);
    line-height: 1.7;
    color: var(--muted-foreground);
  }

  .step-content p :global(strong) {
    color: var(--foreground);
    font-weight: 600;
  }

  @media (max-width: 980px) {
    .process-step {
      padding: 1.5rem;
      gap: 1.25rem;
    }

    .step-number {
      width: 2.5rem;
      height: 2.5rem;
      font-size: 1.1rem;
    }
  }

  @media (max-width: 600px) {
    .process-step {
      flex-direction: column;
      gap: 1rem;
    }
  }
</style>
