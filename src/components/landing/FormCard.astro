---
interface Props {
  heading: string;
  class?: string;
}

const { heading, class: className = '' } = Astro.props;
---

<div class={`form-card ${className}`}>
  <h2>{heading}</h2>
  <slot />
</div>

<style>
  .form-card {
    position: relative;
    z-index: 1;
    width: min(420px, 100%);
    background: var(--card);
    border-radius: 16px;
    padding: 2rem;
    border: 1px solid var(--border);
    box-shadow: 0 4px 24px rgba(0, 0, 0, 0.06);
  }

  .form-card h2 {
    margin: 0 0 1rem 0;
    font-size: 1.25rem;
    font-family: var(--font-sans);
    color: var(--card-foreground);
  }

  @media (min-width: 981px) and (max-width: 1400px) {
    .form-card {
      max-width: 360px;
    }
  }

  @media (max-width: 980px) {
    .form-card {
      width: 100%;
      max-width: 100%;
      box-sizing: border-box;
      order: 3;
    }
  }
</style>
