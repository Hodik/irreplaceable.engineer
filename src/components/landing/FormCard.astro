---
interface Props {
  heading: string;
  class?: string;
}

const { heading, class: className = '' } = Astro.props;
---

<div class={`form-card ${className}`}>
  <h2>{heading}</h2>
  <slot />
</div>

<style>
  .form-card {
    position: relative;
    z-index: 1;
    width: min(420px, 100%);
    background: rgba(15, 15, 16, 0.98);
    border-radius: 16px;
    padding: 2rem;
    box-shadow:
      0 0 0 1px rgba(255, 255, 255, 0.06),
      0 30px 80px rgba(31, 79, 255, 0.15),
      0 16px 40px rgba(106, 61, 240, 0.12);
  }

  .form-card h2 {
    margin: 0 0 1rem 0;
    font-size: 1.25rem;
  }

  @media (min-width: 981px) and (max-width: 1400px) {
    .form-card {
      max-width: 360px;
    }
  }

  @media (max-width: 980px) {
    .form-card {
      width: 100%;
      max-width: 100%;
      box-sizing: border-box;
      order: 3;
    }
  }
</style>
