---
import "../../styles/global.css";
---

<section class="vertical-landing">
  <slot />
</section>

<style>
  @import "../../styles/global.css";

  .vertical-landing {
    min-height: 100svh;
    width: 100%;
    max-width: 900px;
    margin: 0 auto;
    padding: 4rem clamp(1.25rem, 4vw, 2rem);
    display: flex;
    flex-direction: column;
    gap: 4rem;
  }

  @media (max-width: 980px) {
    .vertical-landing {
      padding: 2rem 1.25rem;
      gap: 3rem;
    }
  }
</style>
