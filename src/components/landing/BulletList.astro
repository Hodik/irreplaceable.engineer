---
import "../../styles/landing-shared.css";

interface Props {
  items: string[];
  variant?: 'desktop' | 'mobile';
  class?: string;
}

const { items, variant = 'desktop', class: className = '' } = Astro.props;
---

<ul class={`landing-bullets bullets-${variant} ${className}`}>
  {items.map((item) => <li>{item}</li>)}
</ul>

<style>
  @media (min-width: 981px) {
    .bullets-mobile {
      display: none !important;
    }
  }

  @media (max-width: 980px) {
    .bullets-desktop {
      display: none;
    }

    .bullets-mobile {
      display: inline-block;
      margin-top: 0;
    }
  }
</style>
