---
interface Props {
  title: string;
  description: string;
  isBonus?: boolean;
}

const { title, description, isBonus = false } = Astro.props;
---

<div class:list={["pillar-card", { bonus: isBonus }]}>
  {isBonus && <span class="bonus-badge">BONUS</span>}
  <h3>{title}</h3>
  <p>{description}</p>
</div>

<style>
  .pillar-card {
    position: relative;
    background: var(--card);
    border-radius: 16px;
    padding: 2rem;
    border: 1px solid var(--border);
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.04);
    transition: transform 0.2s ease, box-shadow 0.2s ease;
  }

  .pillar-card:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.08);
  }

  .pillar-card.bonus {
    border: 2px solid var(--primary);
    box-shadow: 0 4px 20px rgba(14, 14, 14, 0.1);
  }

  .bonus-badge {
    position: absolute;
    top: -12px;
    left: 1.5rem;
    background: var(--primary);
    color: var(--primary-foreground);
    font-size: 0.75rem;
    font-weight: 700;
    font-family: var(--font-sans);
    letter-spacing: 0.05em;
    padding: 0.35rem 0.75rem;
    border-radius: 8px;
    box-shadow: 0 2px 8px rgba(14, 14, 14, 0.15);
  }

  .pillar-card h3 {
    margin: 0 0 1rem 0;
    font-size: clamp(1.25rem, 2vw, 1.5rem);
    font-weight: 600;
    font-family: var(--font-sans);
    line-height: 1.3;
    color: var(--card-foreground);
  }

  .pillar-card p {
    margin: 0;
    font-size: clamp(0.95rem, 1.5vw, 1.05rem);
    line-height: 1.6;
    color: var(--muted-foreground);
  }

  @media (max-width: 980px) {
    .pillar-card {
      padding: 1.75rem 1.5rem;
    }

    .bonus-badge {
      font-size: 0.7rem;
      padding: 0.3rem 0.65rem;
    }
  }
</style>
