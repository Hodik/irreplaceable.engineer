---
import Layout from "../layouts/Layout.astro";
import LandingLayout from "../components/landing/LandingLayout.astro";
import LandingHero from "../components/landing/LandingHero.astro";
import LandingVisual from "../components/landing/LandingVisual.astro";
import MailerLiteForm from "../components/landing/MailerLiteForm.astro";
import previewImg from "../assets/workflow-preview.jpg";

const title = `The proven <span class="accent">AI Workflow</span> to boost your impact as a <span class="underline-accent">backend engineer</span>.`;

const subheadline = "Use the same step-by-step system top engineering teams rely on to plan, code, and review smarter with AI.";

const bullets = [
  "Research-backed AI prompts, rules and guidelines designed to maximize AI's intelligence and output quality for backend engineering tasks.",
  "No vibe coding. Use AI to boost your efficiency and focus on high leverage tasks.",
  "Seamlessly integrates into your Cursor/Cluade Code setup with 1 command, enhancing planning, coding, and review with measurable results.",
];

const mobileBullets = [
  "Research-backed AI prompts, rules and guidelines designed to maximize AI's intelligence and output quality for backend engineering tasks.",
  "No vibe coding. Use AI to boost your efficiency and focus on high leverage tasks.",
  "Seamlessly integrates into your daily backend development with 1 command, enhancing planning, coding, and review with measurable results.",
];
---

<Layout>
  <LandingLayout>
    <LandingHero
      slot="content"
      title={title}
      subheadline={subheadline}
      bullets={bullets}
    />

    <LandingVisual
      slot="visual"
      previewImage={previewImg}
      previewAlt="Preview"
      bullets={mobileBullets}
    >
      <MailerLiteForm
        formId="32397838"
        actionUrl="https://assets.mailerlite.com/jsonp/1610856/forms/168971146349250083/subscribe"
        heading="All I want is your email."
        showNameField={false}
        submitText="Get Access Now"
        successHeading="Thank you!"
        successMessage="Redirecting to setup page..."
        redirectUrl="/setup"
        posthogEvent="email_submitted"
        posthogProps={{ page: "landing" }}
      />
    </LandingVisual>
  </LandingLayout>
</Layout>
