---
import Layout from "../layouts/Layout.astro";
---

<Layout>
  <div class="success-page">
    <div class="success-content">
      <div class="checkmark">
        <svg width="64" height="64" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
          <circle cx="12" cy="12" r="10" stroke="currentColor" stroke-width="2"/>
          <path d="M8 12.5L10.5 15L16 9.5" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
      </div>
      <h1>Thanks!</h1>
      <p>Once the program is launched you are going to be the first one to know. (with a discount)</p>
    </div>
  </div>
</Layout>

<style>
  @import "../styles/global.css";

  .success-page {
    min-height: 100svh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 2rem;
  }

  .success-content {
    max-width: 500px;
    text-align: center;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1.5rem;
  }

  .checkmark {
    color: var(--accent);
    animation: scaleIn 0.5s ease-out;
  }

  @keyframes scaleIn {
    from {
      transform: scale(0);
      opacity: 0;
    }
    to {
      transform: scale(1);
      opacity: 1;
    }
  }

  h1 {
    margin: 0;
    font-size: clamp(2rem, 5vw, 3rem);
    font-weight: 600;
    color: var(--text);
  }

  p {
    margin: 0;
    font-size: clamp(1rem, 2vw, 1.25rem);
    line-height: 1.6;
    color: var(--muted);
    max-width: 450px;
  }
</style>
